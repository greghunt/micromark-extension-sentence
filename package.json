{
  "name": "@unified-semantics/cli",
  "version": "1.0.1",
  "description": "CLI tool for processing markdown with semantic enhancements including sentence-level parsing and semantic tree transformations",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "unified-semantics": "./dist/bin/index.js"
  },
  "scripts": {
    "build": "pnpm -r build",
    "prepare": "pnpm run build && chmod +x dist/bin/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cli": "tsx bin/index.ts"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greghunt/unified-semantics.git"
  },
  "bugs": {
    "url": "https://github.com/greghunt/unified-semantics/issues"
  },
  "homepage": "https://github.com/greghunt/unified-semantics#readme",
  "keywords": [
    "unified",
    "markdown",
    "semantic",
    "sentence",
    "cli",
    "ast",
    "mdast",
    "micromark"
  ],
  "author": "Greg Hunt <npm@ghunt.io>",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.11.24",
    "@types/yargs": "^17.0.32",
    "micromark": "^4.0.2",
    "micromark-util-types": "^1.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-stringify": "^11.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "hastscript": "^9.0.1",
    "unified": "^11.0.5",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "yargs": "^17.7.2"
  }
}